<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="253dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="264dp"
        android:baselineAligned="false"
        android:text="Change Colour"
        android:textAlignment="center"
        android:textColor="#e74c3c"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:baselineAligned="false"
        android:text="Score Multiplier"
        android:textAlignment="center"
        android:textColor="#e74c3c"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3" />

    <RadioGroup
        android:layout_width="265dp"
        android:layout_height="114dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <RadioButton
            android:id="@+id/sm_1x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1x" />

        <RadioButton
            android:id="@+id/sm_1.5x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.5x" />

        <RadioButton
            android:id="@+id/sm_2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2x" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="104dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Time"
        android:textAlignment="center"
        android:textColor="#e74c3c"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="225dp"
        android:layout_height="117dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/rb_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30s" />

        <RadioButton
            android:id="@+id/rb_45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="45s" />

        <RadioButton
            android:id="@+id/rb_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60s" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="252dp"
        android:layout_height="106dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="566dp" >

        <RadioButton
            android:id="@+id/colour_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red" />

        <RadioButton
            android:id="@+id/colour_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green" />

        <RadioButton
            android:id="@+id/colour_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue" />
    </RadioGroup>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game!"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="743dp" />


</androidx.constraintlayout.widget.ConstraintLayout>